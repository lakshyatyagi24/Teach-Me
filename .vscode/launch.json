    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Server",
        "program": "${workspaceFolder}\\backend\\server.js"
      },
      {
        "type": "chrome",
        "request": "launch",
        "name": "Launch Client",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}"
      }
